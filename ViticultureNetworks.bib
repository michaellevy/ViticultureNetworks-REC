  journal = {Regional Environmental Change},
  author = {de Grenade, Rafael and Rudow, Joshua and Hermoza, Rossi Taboada and Aguirre, Maria Elena Adauto and Scott, Christopher A. and Willems, Bram and Schultz, Jennifer L. and Varady, Robert G.},
