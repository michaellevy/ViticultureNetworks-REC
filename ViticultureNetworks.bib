  author = {Wigboldus, S. and Klerkx, L. and Leeuwis, C. and Schut, M. and Muilerman, S. and Jochemsen, H.},
  year = {2016},
  keywords = {Adoption of innovations,Diffusion of innovations,Innovation systems,Outscaling,Responsible innovation,Sustainability transitions,Systemic analysis,Technology transfer,Upscaling},
